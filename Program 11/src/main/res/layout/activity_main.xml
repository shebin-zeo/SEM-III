<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:columnCount="4"
    android:rowCount="5"
    android:layout_width="match_parent"
    android:padding="16dp"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:hint="Enter the number"
        android:textSize="36dp"
        android:layout_columnSpan="4"
        android:id="@+id/result"/>
    <Button
        android:id="@+id/b1"
        android:layout_marginLeft="5dp"
        android:text="1"/>
    <Button
        android:id="@+id/b2"
        android:layout_marginLeft="5dp"
        android:text="2"/>
    <Button
        android:id="@+id/b3"
        android:layout_marginLeft="5dp"
        android:text="3"/>
    <Button
        android:id="@+id/badd"
        android:layout_marginLeft="5dp"
        android:text="+"/>
    <Button
        android:id="@+id/b4"
        android:layout_marginLeft="5dp"
        android:text="4"/>
    <Button
        android:id="@+id/b5"
        android:layout_marginLeft="5dp"
        android:text="5"/>
    <Button
        android:id="@+id/b6"
        android:layout_marginLeft="5dp"
        android:text="6"/>
    <Button
        android:id="@+id/bsub"
        android:layout_marginLeft="5dp"
        android:text="-"/>
    <Button
        android:id="@+id/b7"
        android:layout_marginLeft="5dp"
        android:text="7"/>
    <Button
        android:id="@+id/b8"
        android:layout_marginLeft="5dp"
        android:text="8"/>
    <Button
        android:id="@+id/b9"
        android:layout_marginLeft="5dp"
        android:text="9"/>
    <Button
        android:id="@+id/bmul"
        android:layout_marginLeft="5dp"
        android:text="*"/>
    <Button
        android:id="@+id/bclr"
        android:layout_marginLeft="5dp"
        android:text="CLR"/>
    <Button
        android:id="@+id/b0"
        android:layout_marginLeft="5dp"
        android:text="0"/>
    <Button
        android:id="@+id/beq"
        android:layout_marginLeft="5dp"
        android:text="="/>
    <Button
        android:id="@+id/bdiv"
        android:layout_marginLeft="5dp"
        android:text="/"/>










</GridLayout>